<Window x:Class="WpfBasicControlApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBasicControlApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="TextBlock"/>
        <TextBox Text="TextBox"/>
        <ProgressBar Value="50" Width="60" Height="20"/>
        <Slider Value="5" Width="60"/>
        <PasswordBox Password="Secret"/>
        <Image Source="contact.jpg" Height="30"/>
        <Button Padding="10">
            <MediaElement Source="a.MP4" Height="90"/>
        </Button>
        <Button Width="100">
            <CheckBox>
                <TextBlock 
                    Text="Avec un retour a la ligne" 
                    TextWrapping="Wrap"/>
            </CheckBox>
        </Button>
        <Border Background="Orange"
                CornerRadius="10" Padding="5">
            <Button Content="Un button"/>
        </Border>
        <ScrollViewer Height="300" Width="300"
                      HorizontalScrollBarVisibility="Auto">
            <MediaElement Source="a.MP4" Stretch="None"/>
        </ScrollViewer>
    </StackPanel>
</Window>
